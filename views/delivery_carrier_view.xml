<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="delivery_carrier_form_radish" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.radish</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
        <xpath expr="//page[@name='destination']" position='before'>
            <page string="Radish Configuration" attrs="{'invisible': [('delivery_type', '!=', 'radish')]}">
            <group>
                <field name="radish_shipping_deadline_time" attrs="{'required': [('delivery_type', '=', 'radish')]}"/>
                <field name="radish_expected_business_days" attrs="{'required': [('delivery_type', '=', 'radish')]}"/>
                <field name="radish_merchant_key" />

                <button name="action_validate_merchant_key"
                    string="Validate"
                    type="object"
                    class="btn-primary mt16"
                    />
            </group>
            </page>
            <page string="Pricing" attrs="{'invisible': [('delivery_type', '!=', 'radish')]}">
                <group>
                    <group>
                    <field name="fixed_price"/>
                    <div class="o_row o_td_label">
                        <field name="radish_minimum_order"/>
                        <label for="radish_minimum_order"/>
                    </div>
                    <field nolabel="1" name="radish_minimum_order_amount" attrs="{'required':[('radish_minimum_order','!=', False)], 'invisible':[('radish_minimum_order','=', False)]}"/>
                    </group>
                </group>
            </page>
        </xpath>
        </field>
    </record>
</odoo>
